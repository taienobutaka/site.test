  <meta property="og:url" content="http://localhost:3000" />
  <meta property="og:image" content="http://localhost:3000/images/og-image.jpg" />
  <meta property="og:site_name" content="アニメ・エンターテイメントサイト" />
  <meta property="og:locale" content="ja_JP" />

  <!-- SEO: Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="アニメ・エンターテイメントサイト | 篠澤広キャストドール公式" />
  <meta name="twitter:description" content="篠澤広キャストドール公式サイト。最新アニメ・ゲーム情報、プログラミング学習講座を提供。" />
  <meta name="twitter:image" content="http://localhost:3000/images/twitter-image.jpg" />

  <!-- SEO: 構造化データ (JSON-LD) -->
  <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "アニメ・エンターテイメントサイト",
        "description": "篠澤広キャストドール公式サイト。最新アニメ・ゲーム情報とプログラミング学習コンテンツ",
        "url": "http://localhost:3000",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "http://localhost:3000/search?q={search_term_string}",
          "query-input": "required name=search_term_string"
        },
        "publisher": {
          "@type": "Organization",
          "name": "アニメ・エンターテイメントサイト運営チーム"
        }
      }
    </script>

  <!-- SEO: カノニカルURL -->
  <link rel="canonical" href="http://localhost:3000" />

  <!-- PWA対応 -->
  <link rel="manifest" href="/manifest.json" />
  <meta name="theme-color" content="#ff6b6b" />

  <!-- ファビコン -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png" />

  <link rel="stylesheet" href="/css/style.css" />
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet" />
</head>

<body>
  <div class="container">
    <!-- 画像に完全忠実なトップヘッダー -->
    <header class="top-header">
      <div class="header-container">
        <!-- 左側の要素（ロゴエリア） -->
        <div class="header-left">
          <div class="logo-area">
            <div class="logo-main-text">ギガファイル</div>
            <div class="logo-top-text">
              YouTubeで【GiFiレコーズラジオ】配信中!
            </div>
          </div>
        </div>

        <!-- 中央の「Xポスト」 -->
        <div class="header-center">
          <div class="x-post">Xポスト</div>
        </div>

        <!-- 右側のナビゲーションメニュー（画像通りの7項目） -->
        <nav class="header-nav">
          <ul class="nav-list">
            <li class="nav-item"><a href="#" class="nav-link">ホーム</a></li>
            <li class="nav-item">
              <a href="#" class="nav-link">お知らせ</a>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">ギガファイルとは</a>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">お問い合わせ</a>
            </li>
            <li class="nav-item"><a href="#" class="nav-link">アプリ</a></li>
            <li class="nav-item"><a href="#" class="nav-link">使い方</a></li>
            <li class="nav-item">
              <a href="#" class="nav-link">速度比較</a>
            </li>
          </ul>
        </nav>

        <!-- モバイル用ハンバーガーメニュー -->
        <div class="mobile-menu-btn">
          <span class="hamburger-icon">☰</span>
        </div>
      </div>
    </header>

    <!-- メインヒーローセクション（画像忠実再現） -->
    <section class="hero-banner">
      <div class="hero-container">
        <!-- 左側の縦書きテキスト -->
        <div class="left-vertical-text">
          <div class="vertical-text-block">
